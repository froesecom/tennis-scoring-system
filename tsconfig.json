{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "target": "es5"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": ["node_modules"]
}
